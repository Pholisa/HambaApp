<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hamba_background"
    tools:context=".MapsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="5dp"
        android:fontFamily="cursive"
        android:text="Hamba"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_heading2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:text="Travel"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/tv_heading3"
        android:layout_below="@id/tv_heading2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:text="Categories"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <HorizontalScrollView
        android:id="@+id/HorizontalLay"
        android:layout_below="@id/tv_heading3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ib_accomodation"
                android:contentDescription="Accomodation"
                android:padding="30dp"
                android:src="@drawable/baseline_bed_24"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ib_transport"
                android:padding="30dp"
                android:contentDescription="Transportation"
                android:src="@drawable/baseline_local_taxi_24"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ib_bar"
                android:contentDescription="Local Bar"
                android:padding="30dp"
                android:src="@drawable/baseline_local_bar_24"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ib_restaurant"
                android:contentDescription="Restaurant"
                android:padding="30dp"
                android:src="@drawable/baseline_restaurant_24"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ib_atm"
                android:contentDescription="ATM"
                android:padding="30dp"
                android:src="@drawable/baseline_local_atm_24"/>

        </LinearLayout>


    </HorizontalScrollView>


    <fragment
        android:layout_below="@id/HorizontalLay"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>