<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hamba_background"
    tools:context=".BusinessPortal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:id="@+id/tv_heading1"
        android:fontFamily="cursive"
        android:text="Hamba"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_heading2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Business Portal"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/linLay_profile"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading2"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="182dp"
            android:layout_height="112dp"
            android:contentDescription="profile"
            android:background="@drawable/theborder"
            android:src="@drawable/ic_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/business_username"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/business_email"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_addList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/linLay_profile"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/search_background"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_addList"
            android:layout_width="94dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_add_circle_outline_24" />

        <TextView
            android:layout_width="158dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Add Listing"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_editList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/theborder"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linLay_profile"
        app:layout_constraintStart_toEndOf="@+id/lay_addList"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_editList"
            android:layout_width="94dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_edit_24" />

        <TextView
            android:layout_width="158dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Edit Listing"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_viewList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/theborder"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/lay_editList"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_viewList"
            android:layout_width="94dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_remove_red_eye_24" />

        <TextView
            android:layout_width="158dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="View Current Listing"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_deleteList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/theborder"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="22dp"
        app:layout_constraintTop_toBottomOf="@+id/lay_addList"
        app:layout_constraintStart_toEndOf="@+id/lay_viewList"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_deleteList"
            android:layout_width="94dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_delete_24" />

        <TextView
            android:layout_width="158dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Delete Listing"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_admin" />
</androidx.constraintlayout.widget.ConstraintLayout>
