<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:id="@+id/busImageRV"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_soweto" />
        <ImageView
            android:id="@+id/ivFavRV"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_heartempty" />


            <TextView
                android:id="@+id/busTitleRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/busTypeRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Category"
            android:visibility="gone" />

        <TextView
            android:id="@+id/busDescriptionRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Description"
            android:visibility="gone" />

            <TextView
                android:id="@+id/busPriceRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/busLocationRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/busEmailRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Email"
            android:visibility="gone" />

        <TextView
            android:id="@+id/busNumberRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Number"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/busEmailRV"
            app:layout_constraintTop_toBottomOf="@+id/busEmailRV" />

    </LinearLayout>
</LinearLayout>