<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hamba_background"
    tools:context=".Favourites">

    <TextView
        android:id="@+id/hamba_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Hamba"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/favourites_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:text="Favourites"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="105dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/favourites_img1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/samplepic"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="161dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/favourites_img2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/samplepic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="326dp" />

    <ImageView
        android:id="@+id/favourites_img3"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/samplepic"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="490dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/favourites_titletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Vilakazi Street 2 bed S/C"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="161dp" />

    <TextView
        android:id="@+id/rateus_titletext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Authentic tour of Soweto"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="326dp" />

    <TextView
        android:id="@+id/favourites_titletext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Safe Soweto Shuttle Service"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="490dp" />

    <Button
        android:id="@+id/moreInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:onClick="onMoreInfoButtonClick"
        android:text="More Info"
        android:textColor="#000000"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="238dp" />

    <Button
        android:id="@+id/moreInfoButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:onClick="onMoreInfoButtonClick"
        android:text="More Info"
        android:textColor="#000000"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="403dp" />

    <Button
        android:id="@+id/moreInfoButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:onClick="onMoreInfoButtonClick"
        android:text="More Info"
        android:textColor="#000000"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="567dp" />

    <TextView
        android:id="@+id/favourites_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="R 1 500p/night"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints,TextSizeCheck"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="247dp" />

    <TextView
        android:id="@+id/favourites_price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="R 1 100 p/p"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints,TextSizeCheck"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="411dp" />

    <TextView
        android:id="@+id/favourites_price3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="From: R 179"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints,TextSizeCheck"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="576dp" />

    <TextView
        android:id="@+id/favourites_breifdescription"
        android:layout_width="221dp"
        android:layout_height="46dp"
        android:fontFamily="sans-serif"
        android:text="2 Bedroom Self catering Accommodation in the iconic Vilakazi Street  "
        android:textColor="@color/white"
        android:textSize="12dp"
        tools:ignore="MissingConstraints,TextSizeCheck"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="190dp" />

    <TextView
        android:id="@+id/favourites_breifdescription2"
        android:layout_width="221dp"
        android:layout_height="46dp"
        android:fontFamily="sans-serif"
        android:text="Experience the Soweto Authentically   "
        android:textColor="@color/white"
        android:textSize="12dp"
        tools:ignore="MissingConstraints,TextSizeCheck"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="357dp" />

    <TextView
        android:id="@+id/favourites_breifdescription3"
        android:layout_width="221dp"
        android:layout_height="46dp"
        android:fontFamily="sans-serif"
        android:text="Move Around Soweto safely"
        android:textColor="@color/white"
        android:textSize="12dp"
        tools:ignore="MissingConstraints,TextSizeCheck"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="521dp" />


</androidx.constraintlayout.widget.ConstraintLayout>