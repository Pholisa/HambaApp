<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hamba_background"
    tools:context=".BusinessPortal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:text="Hamba"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/tv_heading2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:text="Business Portal"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/linLay_profile"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/tv_heading2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="182dp"
            android:layout_height="112dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="profile"
            android:background="@drawable/theborder"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/business_username"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/business_email"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_addList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linLay_profile"
        android:layout_marginStart="220dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/theborder"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:soundEffectsEnabled="false">

        <ImageView
            android:id="@+id/iv_addList"
            android:layout_width="94dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_add_circle_outline_24" />

        <TextView
            android:layout_width="158dp"
            android:layout_height="35dp"
            android:layout_below="@+id/iv_addList"
            android:gravity="center"
            android:text="Add Listing"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_editList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linLay_profile"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/theborder"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_editList"
            android:layout_width="94dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_edit_24" />

        <TextView
            android:layout_width="158dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Edit Listing"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_viewList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay_editList"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/theborder"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_viewList"
            android:layout_width="94dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_remove_red_eye_24" />

        <TextView
            android:layout_width="158dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="View Current Listing"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_deleteList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay_addList"
        android:layout_marginStart="220dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/theborder"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_deleteList"
            android:layout_width="94dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_delete_24" />

        <TextView
            android:layout_width="158dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Delete Listing"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>


</RelativeLayout>