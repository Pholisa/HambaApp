<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entertainment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rLay_entertain"
        android:background="#6500BCD4">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamba"
            android:fontFamily="cursive"
            android:textSize="30sp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="60dp"
            android:text="Entertainment"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_busTitle"
            android:layout_below="@id/tv_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:text="Display business Title"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/iv_advert1"
            android:layout_width="391dp"
            android:layout_height="150dp"
            android:layout_below="@id/tv_busTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/img_ad1" />

        <ImageView
            android:id="@+id/iv_advert2"
            android:layout_width="391dp"
            android:layout_height="150dp"
            android:layout_below="@id/iv_advert1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/img_ad2" />

        <TextView
            android:id="@+id/tv_overview"
            android:layout_below="@id/iv_advert2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:text="Overview"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_busDescription"
            android:layout_below="@id/tv_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:text="Retrieve business description and display here"
            android:textSize="25sp" />

    </RelativeLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation"
        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>