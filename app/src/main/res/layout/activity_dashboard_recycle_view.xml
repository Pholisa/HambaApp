<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp">


    <ImageView
        android:id="@+id/busImageRV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_soweto" />

    <TextView
        android:id="@+id/busTitleRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="AM Lake"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toEndOf="@+id/busImageRV"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/busTypeRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Entertainment"
        app:layout_constraintStart_toStartOf="@+id/busTitleRV"
        app:layout_constraintTop_toBottomOf="@+id/busTitleRV" />

    <TextView
        android:id="@+id/busDescriptionRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="A welcoming home"
        app:layout_constraintStart_toStartOf="@+id/busTypeRV"
        app:layout_constraintTop_toBottomOf="@+id/busTypeRV" />

    <ImageView
        android:id="@+id/ivFavRV"
        android:layout_width="37dp"
        android:layout_height="99dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_heartempty" />
</androidx.constraintlayout.widget.ConstraintLayout>
