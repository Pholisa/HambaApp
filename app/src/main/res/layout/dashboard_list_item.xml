<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/busImageRV"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_soweto" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingRight="12dp"
        android:orientation="vertical">

        <!-- busTitleRV -->
        <TextView
            android:id="@+id/busTitleRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:paddingLeft="5dp"
            android:text="Title"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/busTypeRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:visibility="gone" />

        <TextView
            android:id="@+id/busDescriptionRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:visibility="gone" />

        <TextView
            android:id="@+id/busLocationRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:paddingLeft="5dp"
            android:layout_marginTop="2dp"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/busEmailRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Email"
            android:visibility="gone" />

        <TextView
            android:id="@+id/busNumberRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/busEmailRV"
            app:layout_constraintTop_toBottomOf="@+id/busEmailRV" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/busPriceRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Price"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ivFavRV"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/orange"
            android:text="More Info"
            android:textSize="10dp" />


    </RelativeLayout>
    </LinearLayout>
</LinearLayout>




