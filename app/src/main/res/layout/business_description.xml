<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:fontFamily="cursive"
        android:text="Hamba"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Your Business"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ETBusTitle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="35dp"
                android:hint="Title"
                app:boxStrokeColor="@color/white"/>




            <!--needs to be fixed the text is not written in paragraph form-->
            <EditText
                android:id="@+id/ETBusDescrip"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="35dp"
                android:hint="Description of the business.\nMax Character 2500"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/black"/>



            <Button
                android:id="@+id/btnBusDescUpload"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/black"
                android:text="Upload Business Images "
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:textSize="18dp"
                android:textStyle="bold"
                app:icon="@android:drawable/ic_menu_upload"
                app:iconGravity="textEnd" />

            <Button
                android:id="@+id/btnBusDescNext"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:text="Next"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation"
        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>